<div class="details cf">
  <div class="instructions">
    <h2>Step 1</h2>
    <p>Add some images using the forms below on the left</p>
    <p>You can see the images you've uploaded on the right</p>
  </div>
  <div class="next">
    <%= link_to 'Next', new_mosaic_path %>
  </div>  
</div>


<div id="image_uploads_container" class="cf">
  <div id="upload_area">
    <div id="upload_type_selector" class="cf">
      <div id="upload_selector_file" class="upload_selector active">
        <p>upload from file</p>
      </div>
      <div id="upload_selector_fb" class="upload_selector get_from_fb inactive">
        <p>upload from facebook</p>
      </div>
    </div>
    <div id="upload_forms"> 
      <!-- toggle show on active depending on selection above -->
      <div id="upload_from_file">
        <%= render 'form', target_image: Image.new %>
      </div>
      <div id="upload_from_fb">
        <div id="album_selector">
          <%= render 'facebook_images_uploader' %>
        </div>
        <div id="fb_albums">
        </div>
      </div>
    </div>
  </div>
  
  <div id="uploaded_images_outer">
    <h3>Uploaded images:</h3>
    <div id="uploaded_images_inner">
      <% @images.each do |image| %>
        <div class="uploaded_image_container">
          <%= image_tag(image.file.url) %>
        </div>
      <% end %>
    </div>
  </div>
</div>